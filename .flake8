[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    manage.py,
    settings.py,
    wsgi.py,
    asgi.py,
    chromaDB,
    data-insertion
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled separately)
max-complexity = 10

